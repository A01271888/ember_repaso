<div>
  <h3>Registrate con correo</h3>

  <form {{action 'signup' on='submit'}}>
    <div >
      <label>Nombre</label>
      {{input value=nombre}}
    </div>

    <div >
      <label>Dirección de correo</label>
      {{input type="email" value=email}}
    </div>
    <div>
      <label>Elige una contraseña</label>
      {{#if passwordVisibility}}
        {{input value=password}}
      {{else}}
        {{input type="password" value=password}}
      {{/if}}

      <button {{action 'togglePasswordVisibility'}}>
        {{#if passwordVisibility}}
          <span class="glyphicon glyphicon-eye-close"></span>
        {{else}}
          <span class="glyphicon glyphicon-eye-open"></span>
        {{/if}}
      </button>
    </div>
    <div>
      <label>Confirma la contraseña</label>
      {{#if passwordVisibility}}
        {{input value=passwordConfirmation}}
      {{else}}
        {{input type="password" value=passwordConfirmation}}
      {{/if}}

    </div>

    {{#if errorMsg}}
      <p>{{errorMsg}}</p>
    {{/if}}

    <p>
      <!-- <button class="btn btn-primary btn-round" disabled={{if isWorking true null}}>
        {{if isWorking 'Espera...' 'Regístrame!' }}</button> -->
      <button class="btn btn-primary btn-round"> Registrame! </button>
    </p>
  </form>
  <!-- Hay que habilitar el que se pueda abrir sesión con correo en Firebase -->

</div>

<div class="">
  <h3>Registrate con: </h3>
  <ul>
    <li>
        <button class="btn btn-primary" {{action 'signupWithProvider' 'facebook'}}>Facebook</button>
    </li>
    <li>Twitter</li>
    <li>Google</li>
  </ul>
</div>

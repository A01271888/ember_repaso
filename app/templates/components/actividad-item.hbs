<div class="panel">
  <div class="panel-heading">
    <h4 class="panel-tittle">
      {{input type="checkbox" change=(action 'selectActividad' actividad)}}
      <a data-toggle="collapse" href="#{{actividad.id}}">
        {{actividad.nombre}}
      </a>
    </h4>
  </div>

  <div id="{{actividad.id}}" class="panel-collapse collapse">
    <div class="panel-body">
      Inicio: {{actividad.inicio}}
      <hr>
      Fin: {{actividad.fin}}
    </div>
  </div>
</div>
